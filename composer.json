{
    "require": {
        "geoip2/geoip2": "^2.13",
        "tronovav/geoip2-update": "^2.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "IntruderAlert\\": "backend/include/"
        }
    },
    "scripts": {
        "lint": "phpstan && phpcs backend/ --standard=PSR12 --ignore=backend/vendor",
        "fix": "phpcbf backend/ --standard=PSR12 --ignore=backend/vendor"
    },
    "config": {
        "vendor-dir": "backend/vendor"
    }
}
