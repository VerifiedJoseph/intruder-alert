{
    "require": {
        "php": "^8.1",
        "geoip2/geoip2": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpcsstandards/php_codesniffer": "^3.8",
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "IntruderAlert\\": "backend/include/"
        },
        "files": [
            "backend/include/version.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "backend/tests/"
        ],
        "files": [
            "backend/include/version.php"
        ]
    },
    "scripts": {
        "lint": "phpstan && phpcs",
        "lint-phpstan": "phpstan",
        "lint-phpcs": "phpcs",
        "lint-phpcs-gh-action": "phpcs --report=checkstyle | cs2pr",
        "fix": "phpcbf",
        "test": "phpunit --colors --coverage-html coverage-reports"
    },
    "config": {
        "vendor-dir": "backend/vendor"
    }
}
